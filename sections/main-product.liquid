{%- liquid
   assign global_heading_size = settings.enable_global_heading_font_size
   assign global_body_size = settings.enable_global_body_font_size
   assign global_color = settings.enable_global_color
-%}

{%- style -%}
  #shopify-section-{{ section.id }} .main-products {
    padding: 5px 0;
  }

  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} .main-products {
      padding-top: 0;
    }
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #shopify-section-{{ section.id }} .thumbnail {
    border-radius: {{ section.settings.thumbnail_border_radius }}px;
  }
{%- endstyle -%}

<div id="main-product-top" class="main-products color-{{ section.settings.section_color_scheme }}">
  <section
    id="MainProduct-{{ section.id }}"
    class="page-width  section-{{ section.id }}-padding"
    data-section="{{ section.id }}"
  >
   {% render 'main-product-css' %}
    
    {% render 'accordion-css' %}
    <link rel="stylesheet" href="{{ 'component-sticky-atc.css' | asset_url }}" media="print" onload="this.media='all'" defer>
    <link rel="stylesheet" href="{{ 'component-rating.css' | asset_url }}" media="print" onload="this.media='all'" defer>
    {% render 'list-payment-styles' %}

    {% if section.settings.image_zoom == 'hover' %}
      <script id="EnableZoomOnHover-main" src="{{ 'magnify.js' | asset_url }}" defer="defer"></script>
    {% endif %}
    {%- if request.design_mode -%}
      <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
    {%- if first_3d_model -%}
      {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
      <link
        id="ModelViewerStyle"
        rel="stylesheet"
        href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
        media="print"
        onload="this.media='all'"
      >
      <link
        id="ModelViewerOverride"
        rel="stylesheet"
        href="{{ 'component-model-viewer-ui.css' | asset_url }}"
        media="print"
        onload="this.media='all'"
      >
    {%- endif -%}

    {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}

    <div class="product product--{{ section.settings.media_size }}  product--{{ section.settings.gallery_layout }} product--mobile-{{ section.settings.mobile_thumbnails }} grid grid--1-col {% if product.media.size > 0 %}grid--2-col-tablet{% else %}product--no-media{% endif %}">
      <div class="grid__item product__media-wrapper {% if section.settings.enable_sticky_info %} product__column-sticky{% endif %}">
        {% render 'product-media-gallery', variant_images: variant_images, section %}
      </div>
      {%- liquid
        if variant_images.size == product.media.size
          assign single_media_visible = true
        endif

        assign media_count = product.media.size
        if media_count > 1 and variant_images.size > 0
          assign media_count = media_count | minus: variant_images.size | plus: 1
        endif

        if media_count == 1 or single_media_visible
          assign single_media_visible_mobile = true
        endif

        if media_count == 0 or single_media_visible_mobile or section.settings.mobile_thumbnails == 'show' or section.settings.mobile_thumbnails == 'columns' and media_count < 3
          assign hide_mobile_slider = true
        endif
      -%}
      <div class="product__info-wrapper grid__item{% if settings.page_width > 1400 and section.settings.media_size == "small" %} product__info-wrapper--extra-padding{% endif %}{% if section.settings.enable_sticky_info %} product__column-sticky{% endif %}{% if hide_mobile_slider %} product__info-wrapper--top-padding{% endif %}">
        <product-info
          id="ProductInfo-{{ section.id }}"
          data-section="{{ section.id }}"
          data-url="{{ product.url }}"
          class="product__info-container fade-in-child"
        >
          {%- assign product_form_id = 'product-form-' | append: section.id -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'rating' -%}
                <div
                  class="star-rating product-block-{{ block.id }}"
                  style="display:flex; align-items: center; justify-content: {{ block.settings.rating_alignment }};"
                  {{ block.shopify_attributes }}
                >
                  {% style %}
                    {% if block.settings.stars_color != blank %}
                      .product-block-{{ block.id }} .stars-inner::before{
                        color: {{ block.settings.stars_color }};
                      }
                    {% endif %}
                    .product-block-{{ block.id }} {
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }

                    .stars-inner::before,
                    .stars-outer::before {
                      font-size: {{ block.settings.rating_starts_size }}px;
                      line-height: 1;
                      letter-spacing: 0;
                      font-weight: normal;
                      text-rendering: geometricPrecision;
                      -webkit-font-smoothing: antialiased;
                      -moz-osx-font-smoothing: grayscale;
                    }
                  {% endstyle %}
                  {% comment %} stars_font_size  {% endcomment %}
                  <div class="stars-outer">
                    {% assign rating_float = block.settings.product_rating | plus: 0.0 %}
                    {% assign rating_float = rating_float | divided_by: 1.0 %}
                    {% capture rating_float_rounded %}{{ rating_float | round: 2 }}{% endcapture %}
                    {% assign rating_float_final = rating_float_rounded | replace: ',', '.' %}

                    {% assign rating_percentage = rating_float_final | divided_by: 5 | times: 100 %}
                    <div class="stars-inner" style="width: {{ rating_percentage }}%"></div>
                  </div>
                  {% if block.settings.rating_text != blank %}
                    {%  style  %} 
                      span.rating p strong {
                        color: {{ block.settings.rating_text_highlighted_color }} !important;
                      }  
                    {% endstyle %}
                    <span
                      class="rating"
                      style="
                        margin-left: 8px; 
                        word-wrap: break-word; 
                        font-size: {% if global_body_size %}var(--global-body-text-font-size){% else %}{{ block.settings.rating_text_font_size }}px{% endif %}; 
                        color: {% if global_color %}rgb(var(--color-base-text)){% else %}{{ block.settings.rating_text_color }}{% endif %};
                      "
                    >
                      {{ block.settings.rating_text }}
                    </span>
                  {% endif %}
                </div>
              {%- when 'text' -%}
                <div class="rte sw-base-text-color product-block-{{ block.id }}" {{ block.shopify_attributes }}>
                  {% style %}
                    .product-block-{{ block.id }} p {
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }
                  {% endstyle %}
                  <p
                    style="
                      color: inherit !important; max-width: none !important; font-size: {{block.settings.font_size }}px !important; line-height: {{block.settings.font_size | plus: 10 }}px !important; margin-top: 0 !important;
                    "
                    class="product__text "
                    {{ block.shopify_attributes }}
                  >
                    {{- block.settings.text -}}
                  </p>
                </div>
              {%- when 'title' -%}
                <div class="product__title product-block-{{ block.id }}" {{ block.shopify_attributes }}>
                  {% style %}
                    .product-block-{{ block.id }}{
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }
                    #block-heading-{{ block.id }}{
                      font-size: {% if global_heading_size %}var(--font-heading-size)!important{% else %}{{ block.settings.font_size }}px!important{% endif %};
                      line-height: {% if global_heading_size %}calc(var(--font-heading-size) + 8px)!important{% else %}{{ block.settings.font_size | plus: 8 }}px!important{% endif %};
                      color: {% if global_color %}rgb(var(--color-base-heading)){% else %}{{ block.settings.title_color }}{% endif %};
                    }
                    @media (max-width: 768px) {
                      #block-heading-{{ block.id }}{
                        font-size: {% if global_heading_size %}var(--font-heading-mob-size) !important{% else %}{{ block.settings.mobile_font_size }}px!important{% endif %};
                        line-height: {% if global_heading_size %}calc(var(--font-heading-mob-size) + 8px) !important{% else %}{{ block.settings.mobile_font_size | plus: 8 }}px!important{% endif %};
                      }
                    }
                  {% endstyle %}

                  <h1
                    id="block-heading-{{ block.id }}"
                    class="title {{ block.settings.text_size }}{% if block.settings.uppercase_title %} product-title--uppercase{% else %} product-title--nouppercase {% endif %}{% if block.settings.title_alignment == 'center' %} center{% else %} left{% endif %}{% if block.settings.mobile_title_alignment == 'center' %} mobile_center{% else %} mobile_left{% endif %}"
                  >
                    {{ product.title | escape }}
                  </h1>
                  <a href="{{ product.url }}" class="product__title">
                    <h2 class="h1">
                      {{ product.title | escape }}
                    </h2>
                  </a>
                </div>
              {%- when 'price' -%}
                <div
                  class="no-js-hidden product-page-price product-block-{{ block.id }}"
                  id="price-{{ section.id }}"
                  role="status"
                  {{ block.shopify_attributes }}
                >
                  {% style %}
                    .product-block-{{ block.id }}{
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }
                  {% endstyle %}
                  {% liquid
                    assign price_second = false
                    if block.settings.layout == 'price_second'
                      assign price_second = true
                    endif
                  %}
                  {% capture price_css %}
                    color: {{ block.settings.sale_text_color }}!important;
                    font-size: {{ block.settings.regular_font_size }}px!important;
                  {% endcapture %}
                  {% capture compare_at_css %}
                    color: {{ block.settings.compare_text_color }}!important;
                    font-size: {{ block.settings.font_size }}px!important;
                  {% endcapture %}
                  {%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: true,
                    price_second: price_second,
                    custom_css_for_price: price_css,
                    custom_css_for_compare_at_price: compare_at_css,
                    block: block
                  -%}
                </div>
                <div {{ block.shopify_attributes }}>
                  {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                  {%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    {{ form | payment_terms }}
                  {%- endform -%}
                </div>
              {%- when 'inventory' -%}
                {%- if product.selected_or_first_available_variant.inventory_management == 'shopify' -%}
                  <p
                    class="product__inventory product-block-{{ block.id }} no-js-hidden {% if product.selected_or_first_available_variant.inventory_management != 'shopify' %} visibility-hidden{% endif %}"
                    {{ block.shopify_attributes }}
                    id="Inventory-{{ section.id }}"
                    role="status"
                    style="color: {{ block.settings.inventory_status_color }}; font-size: {{ block.settings.inventory_status_font_size }}px; font-weight: {{ block.settings.inventory_status_font_weight }};"
                  >
                    {% style %}
                      .product-block-{{ block.id }}{
                        padding-top: {{block.settings.padding_top }}px;
                        padding-bottom: {{block.settings.padding_bottom }}px;
                      }
                    {% endstyle %}
                    {%- if product.selected_or_first_available_variant.inventory_quantity > 0 -%}
                      {%- if product.selected_or_first_available_variant.inventory_quantity
                          <= block.settings.inventory_threshold
                      -%}
                        <svg width="15" height="15" aria-hidden="true">
                          <circle cx="7.5" cy="7.5" r="7.5" fill="rgb(238,148,65, 0.3)"/>
                          <circle cx="7.5" cy="7.5" r="5" stroke="rgb(255, 255, 255)" stroke-width="1" fill="rgb(238,148,65)"/>
                        </svg>
                        {%- if block.settings.show_inventory_quantity -%}
                          {{-
                            'products.product.inventory_low_stock_show_count'
                            | t: quantity: product.selected_or_first_available_variant.inventory_quantity
                          -}}
                        {%- else -%}
                          {{- 'products.product.inventory_low_stock' | t -}}
                        {%- endif -%}
                      {%- else -%}
                        <svg width="15" height="15" aria-hidden="true">
                          <circle cx="7.5" cy="7.5" r="7.5" fill="rgb(62,214,96, 0.3)"/>
                          <circle cx="7.5" cy="7.5" r="5" stroke="rgb(255, 255, 255)" stroke-width="1" fill="rgb(62,214,96)"/>
                        </svg>
                        {%- if block.settings.show_inventory_quantity -%}
                          {{ product.selected_or_first_available_variant.inventory_quantity }} {{ block.settings.inventory_status_text }}
                        {%- else -%}
                          {{- block.settings.inventory_status_text -}}
                        {%- endif -%}
                      {%- endif -%}
                    {%- else -%}
                      {%- if product.selected_or_first_available_variant.inventory_policy == 'continue' -%}
                        <svg width="15" height="15" aria-hidden="true">
                          <circle cx="7.5" cy="7.5" r="7.5" fill="rgb(62,214,96, 0.3)"/>
                          <circle cx="7.5" cy="7.5" r="5" stroke="rgb(255, 255, 255)" stroke-width="1" fill="rgb(62,214,96)"/>
                        </svg>
                        {{- 'products.product.inventory_out_of_stock_continue_selling' | t -}}
                      {%- else -%}
                        <svg width="15" height="15" aria-hidden="true">
                          <circle cx="7.5" cy="7.5" r="7.5" fill="rgb(200,200,200, 0.3)"/>
                          <circle cx="7.5" cy="7.5" r="5" stroke="rgb(255, 255, 255)" stroke-width="1" fill="rgb(200,200,200)"/>
                        </svg>
                        {{- 'products.product.inventory_out_of_stock' | t -}}
                      {%- endif -%}
                    {%- endif -%}
                  </p>
                {%- endif -%}
              {%- when 'description' -%}
                <div class="product-block-{{ block.id }}" {{ block.shopify_attributes }}>
                  {% style %}
                    .product-block-{{ block.id }}{
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }
                  {% endstyle %}
                  {%- if product.description != blank and block.settings.show_description -%}
                    <div
                      style="color: {% if global_color %}rgb(var(--color-base-text)){% else %}{{ block.settings.des_color }}{% endif %}; --color-highlighted-color: {{ block.settings.bolded_des_color }};"
                      class="product__description rte quick-add-hidden"
                      {{ block.shopify_attributes }}
                    >
                      {{ product.description }}
                    </div>
                  {%- endif -%}
                </div>
              {%- when 'bullet-point-benefits' -%}
                <div class="emoji-benefits-container product-block-{{ block.id }}" {{ block.shopify_attributes }}>
                  {% style %}
                    .product-block-{{ block.id }} {
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }
                    .product-block-{{ block.id }} .bullet-point-text {
                      font-size: {{ block.settings.body_font_size }}px;
                    }
                    .product-block-{{ block.id }} .material-icon svg{
                      width: {{ block.settings.emoji_size }}px !important;
                      height: {{ block.settings.emoji_size }}px !important; 
                      fill: {% if block.settings.emoji_color %}{{ block.settings.emoji_color }} !important{% else %}{{ settings.colors_accent_3 }}{% endif %};
                    }
                  {% endstyle %}
                  <ul style="gap: {{ block.settings.column_gap }}px !important;">
                    {%  style %} 
                      li .bullet-point-text {
                        color: {% if global_color %}rgb(var(--color-base-text)){% else %}{{ block.settings.text_color }}{% endif %};
                        --color-highlighted-color: {{ block.settings.text_highlighted_color }};
                      }
                      {% case block.settings.display_layout %}
                        {% when 'row' %}
                          .emoji-benefits-container ul {
                            display: flex;
                            flex-direction: column;
                          }
                        {% when 'column' %}
                          .emoji-benefits-container ul {
                            display: grid;
                            grid-template-columns: auto auto;
                          }
                      {% endcase %}
                    {% endstyle %}
                    {% if block.settings.point1 != blank %}
                      <li>
                        {%- if block.settings.bullet_image_1 %}
                          <img
                            style="margin-right: 8px; width: {{ block.settings.emoji_size }}px !important; min-width: {{ block.settings.emoji_size }}px !important;"
                            width="{{ block.settings.emoji_size }}"
                            height="{{ block.settings.emoji_size }}"
                            src="{{ block.settings.bullet_image_1 | image_url }}"
                          >
                        {% elsif block.settings.icon_1 != blank %}
                          <span 
                            style="height: {{ block.settings.emoji_size }}px !important; width: {{ block.settings.emoji_size }}px !important; color: {% if block.settings.emoji_color %}{{ block.settings.emoji_color }} !important{% else %}{{ settings.colors_accent_3 }}{% endif %};"
                            class="material-icon material-symbols-outlined notranslate"
                          >
                            {{block.settings.icon_1}}
                          </span>
                        {% endif %}
                        <div class="bullet-point-text sw-base-text-color">
                          {{ block.settings.point1 }}
                        </div>
                      </li>
                    {% endif %}
                    {% if block.settings.point2 != blank %}
                      <li>
                        {%- if block.settings.bullet_image_2 %}
                          <img
                            style="margin-right: 8px; width: {{ block.settings.emoji_size }}px !important; min-width: {{ block.settings.emoji_size }}px !important;"
                            width="{{ block.settings.emoji_size }}"
                            height="{{ block.settings.emoji_size }}"
                            src="{{ block.settings.bullet_image_2 | image_url }}"
                          >
                        {% elsif block.settings.icon_2 != blank %}
                          <span 
                            style="height: {{ block.settings.emoji_size }}px !important; width: {{ block.settings.emoji_size }}px !important; color: {% if block.settings.emoji_color %}{{ block.settings.emoji_color }} !important{% else %}{{ settings.colors_accent_3 }}{% endif %};"
                            class="material-icon material-symbols-outlined notranslate"
                          >
                            {{block.settings.icon_2}}
                          </span>
                        {% endif %}
                        <div class="bullet-point-text sw-base-text-color">
                          {{ block.settings.point2 }}
                        </div>
                      </li>
                    {% endif %}
                    {% if block.settings.point3 != blank %}
                      <li>
                        {%- if block.settings.bullet_image_3 %}
                          <img
                            style="margin-right: 8px; width: {{ block.settings.emoji_size }}px !important; min-width: {{ block.settings.emoji_size }}px !important;"
                            width="{{ block.settings.emoji_size }}"
                            height="{{ block.settings.emoji_size }}"
                            src="{{ block.settings.bullet_image_3 | image_url }}"
                          >
                        {% elsif block.settings.icon_3 != blank %}
                          <span 
                            style="height: {{ block.settings.emoji_size }}px !important; width: {{ block.settings.emoji_size }}px !important; color: {% if block.settings.emoji_color %}{{ block.settings.emoji_color }} !important{% else %}{{ settings.colors_accent_3 }}{% endif %};"
                            class="material-icon material-symbols-outlined notranslate"
                          >
                            {{block.settings.icon_3}}
                          </span>
                        {% endif %}
                        <div class="bullet-point-text sw-base-text-color">
                          {{ block.settings.point3 }}
                        </div>
                      </li>
                    {% endif %}
                    {% if block.settings.point4 != blank %}
                      <li>
                        {%- if block.settings.bullet_image_4 %}
                          <img
                            style="margin-right: 8px; width: {{ block.settings.emoji_size }}px !important; min-width: {{ block.settings.emoji_size }}px !important;"
                            width="{{ block.settings.emoji_size }}"
                            height="{{ block.settings.emoji_size }}"
                            src="{{ block.settings.bullet_image_4 | image_url }}"
                          >
                        {% elsif block.settings.icon_4 != blank %}
                          <span 
                            style="height: {{ block.settings.emoji_size }}px !important; width: {{ block.settings.emoji_size }}px !important; color: {% if block.settings.emoji_color %}{{ block.settings.emoji_color }} !important{% else %}{{ settings.colors_accent_3 }}{% endif %};"
                            class="material-icon material-symbols-outlined notranslate"
                          >
                            {{block.settings.icon_4}}
                          </span>
                        {% endif %}
                        <div class="bullet-point-text sw-base-text-color">
                          {{ block.settings.point4 }}
                        </div>
                      </li>
                    {% endif %}
                    {% if block.settings.point5 != blank %}
                      <li>
                        {%- if block.settings.bullet_image_5 %}
                          <img
                            style="margin-right: 8px; width: {{ block.settings.emoji_size }}px !important; min-width: {{ block.settings.emoji_size }}px !important;"
                            width="{{ block.settings.emoji_size }}"
                            height="{{ block.settings.emoji_size }}"
                            src="{{ block.settings.bullet_image_5 | image_url }}"
                          >
                        {% elsif block.settings.icon_5 != blank %}
                          <span 
                            style="height: {{ block.settings.emoji_size }}px !important; width: {{ block.settings.emoji_size }}px !important; color: {% if block.settings.emoji_color %}{{ block.settings.emoji_color }} !important{% else %}{{ settings.colors_accent_3 }}{% endif %};"
                            class="material-icon material-symbols-outlined notranslate icon-5"
                          >
                      
                            {{block.settings.icon_5}}
                          </span>
                        {% endif %}
                        <div class="bullet-point-text sw-base-text-color">
                          {{ block.settings.point5 }}
                        </div>
                      </li>
                    {% endif %}
                    {% if block.settings.point6 != blank %}
                      <li>
                        {%- if block.settings.bullet_image_6 %}
                          <img
                            style="margin-right: 8px; width: {{ block.settings.emoji_size }}px !important; min-width: {{ block.settings.emoji_size }}px !important;"
                            width="{{ block.settings.emoji_size }}"
                            height="{{ block.settings.emoji_size }}"
                            src="{{ block.settings.bullet_image_6 | image_url }}"
                          >
                        {% elsif block.settings.icon_6 != blank %}
                          <span 
                            style="height: {{ block.settings.emoji_size }}px !important; width: {{ block.settings.emoji_size }}px !important; color: {% if block.settings.emoji_color %}{{ block.settings.emoji_color }} !important{% else %}{{ settings.colors_accent_3 }}{% endif %};"
                            class="material-icon material-symbols-outlined notranslate icon-6"
                          >
                            

                            {{block.settings.icon_6}}
                          </span>
                        {% endif %}
                        <div class="bullet-point-text sw-base-text-color">
                          {{ block.settings.point6 }}
                        </div>
                      </li>
                    {% endif %}
                  </ul>
                </div>

              {%- when 'sku' -%}
                <p
                  class="product__sku product-block-{{ block.id }} no-js-hidden {% if product.selected_or_first_available_variant.sku.size == 0 %} visibility-hidden{% endif %}"
                  role="status"
                  {{ block.shopify_attributes }}
                >
                  {% style %}
                    .product-block-{{ block.id }}{
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }
                  {% endstyle %}
                  <span class="visually-hidden">{{ 'products.product.sku' | t }}:</span>
                  {{- product.selected_or_first_available_variant.sku -}}
                </p>
              {%- when 'custom_liquid' -%}
                {{ block.settings.custom_liquid }}
              {%- when 'collapsible_tab' -%}
                <div class="product-block-{{ block.id }}" {{ block.shopify_attributes }}>
                  {% style %}
                    .product-block-{{ block.id }} {
                      padding-top: {{block.settings.padding_top }}px;
                      padding-bottom: {{block.settings.padding_bottom }}px;
                    }
                  {% endstyle %}
                  {%-
                    render 'collapsible'
                    id: block.id | append: '-' | append: section.id,
                    title: block.settings.heading | default: block.settings.page.title,
                    row_title_color: block.settings.coll_heading_color,
                    row_title_highlighted_color: block.settings.coll_heading_highlighted_color,
                    text_content: block.settings.content,

                    row_text_content_color: block.settings.coll_text_color,
