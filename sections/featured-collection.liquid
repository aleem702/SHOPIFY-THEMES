
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'template-collection.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign global_heading_size = settings.enable_global_heading_font_size
  assign global_body_size = settings.enable_global_body_font_size
  assign global_color = settings.enable_global_color
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
  endif

  assign columns_mobile_int = 1
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and products_to_display > 2
    assign show_desktop_slider = true
  endif
-%}

{%- style -%}
  {%- if request.visual_preview_mode -%}
    {% comment %} don't want fade-in animation in preview mode because it messes up preview {% endcomment %}
    .animation_section,
    .animation_section * {
      opacity: 1 !important;
      transform: none !important;
      transition: none !important;
      will-change: auto !important;
    }
  {%- endif -%}
  
  #Slider-{{ section.id }}.grid {
    align-items: stretch;
  }
  #Slider-{{ section.id }} .grid__item {
    display: flex;
    flex-direction: column;
  }
  #Slider-{{ section.id }} .grid__item > div {
    height: 100%;
  }


  #shopify-section-{{ section.id }} .section__featured_collection {
    padding: 5px 0;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #collection__description-{{ section.id }},
  #collection__description-{{ section.id }} p {
    font-size: {% if global_body_size %}var(--global-body-text-font-size)!important{% else %}{{ section.settings.desc_font_size }}px!important{% endif %};
    line-height: {% if global_body_size %}var(--global-body-text-font-size)!important{% else %}{{ section.settings.desc_font_size | plus: 8 }}px!important{% endif %};
    color: {% if global_color %}rgb(var(--color-base-text)){% else %}{{ section.settings.body_text_color }}{% endif %};
    --color-highlighted-color: {{ section.settings.bolded_body_text_color }};
  }

  .featured-collection-{{ section.id }} .card__heading {
    font-size: {{ section.settings.product_title_font_size }}px;
  }

  .featured-collection-{{ section.id }} span.price-item.price-item--regular {
    font-size: {{ section.settings.regular_price_font_size }}px;
  }

  .featured-collection-{{ section.id }} .price--on-sale .price-item--regular {
    color: {{ section.settings.compare_at_price_color }};
    font-size: {{ section.settings.compare_at_price_font_size }}px;
  }

  .featured-collection-{{ section.id }} .price--on-sale .price-item--sale {
    font-size: {{ section.settings.regular_price_font_size }}px;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient section__featured_collection">
  <div class="collection featured-collection-{{ section.id }} section-{{ section.id }}-padding{% if section.settings.full_width %} collection--full-width{% endif %}">
    <div class="collection__title title-wrapper title-wrapper--no-top-margin page-width{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% endif %}{% if show_desktop_slider %} collection__title--desktop-slider{% endif %}">
      {%- if section.settings.title != blank -%}
        {% style %}
          #section-heading-{{ section.id }} {
            font-size: {% if global_heading_size %}var(--font-heading-size)!important{% else %}{{ section.settings.heading_font_size }}px!important{% endif %};
            line-height: {% if global_heading_size %}calc(var(--font-heading-size) + 10px) !important{% else %}{{ section.settings.heading_font_size | plus: 10 }}px!important{% endif %};
            color: {% if global_color %}rgb(var(--color-base-heading)){% else %}{{ section.settings.heading_text_color }}{% endif %};
            --color-highlighted-color: {{ section.settings.bolded_heading_text_color }};
          }
          @media (max-width: 768px) {
            #section-heading-{{ section.id }} {
              font-size: {% if global_heading_size %}var(--font-heading-mob-size) !important{% else %}{{ section.settings.heading_mob_font_size }}px!important{% endif %};
              line-height: {% if global_heading_size %}calc(var(--font-heading-mob-size) + 10px) !important{% else %}{{ section.settings.heading_mob_font_size }}px!important{% endif %};
            }
          }
        {% endstyle %}

        <h2 id="section-heading-{{ section.id }}" class="title">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div
          id="collection__description-{{ section.id }}"
          class="collection__description image-with-text__text rte sw-base-text-color"
          style="margin-top: 2rem;"
        >
          {{ section.settings.description }}
        </div>
      {%- endif -%}
    </div>

    <slider-component class="slider-mobile-gutter{% if section.settings.full_width %} slider-component-full-width{% endif %}{% if show_mobile_slider == false %} page-width{% endif %}{% if show_desktop_slider == false and section.settings.full_width == false %} page-width-desktop{% endif %}{% if show_desktop_slider %} slider-component-desktop{% endif %}">
      <ul
        id="Slider-{{ section.id }}"
        class="grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--3-col-desktop{% if section.settings.collection == blank %} grid--3-col-tablet-down{% else %} grid--1-col-tablet-down{% endif %}{% if show_mobile_slider or show_desktop_slider %} slider{% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="grid__item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}"
          >
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: false,
              show_quick_add: false,
              section_id: section.id
            %}
          </li>
        {%- else -%}
          {%- for i in (1..3) -%}
            <li class="grid__item">
              {% render 'card-product', show_vendor: section.settings.show_vendor %}
            </li>
          {%- endfor -%}
        {%- endfor -%}
      </ul>

      {%- if show_mobile_slider or show_desktop_slider -%}
        <div class="slider-buttons no-js-hidden">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ products_to_display }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>
  </div>
</div>


{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "class": "section animation_section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Featured collection",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Body"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 12,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Desktop heading size",
      "default": 40
    },
    {
      "type": "range",
      "id": "heading_mob_font_size",
      "min": 10,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Mobile heading size",
      "default": 28
    },
    {
      "type": "range",
      "id": "desc_font_size",
      "min": 8,
      "max": 28,
      "step": 1,
      "unit": "px",
      "label": "Body font size",
      "default": 16
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 3,
      "label": "Maximum products"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width products",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_desktop_slider",
      "label": "Enable carousel on desktop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "Enable swipe on mobile"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": true,
      "label": "Show second image"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Vendor display"
    },
    {
      "type": "header",
      "content": "Product card"
    },
    {
      "type": "range",
      "id": "product_title_font_size",
      "label": "Product title font size",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "regular_price_font_size",
      "label": "Regular price font size",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "compare_at_price_font_size",
      "label": "Compare at price font size",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "compare_at_price_color",
      "label": "Compare at price color",
      "default": "#CA0505"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.featured-collection.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.featured-collection.settings.image_ratio.options__2.label"
        },
        {
