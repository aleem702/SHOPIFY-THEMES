{% comment %} 
  Accepts: 
  - social_icons_alignment: {String} 'flex-start' | 'center' | 'flex-end' 
{% endcomment %}

<ul class="footer__list-social list-unstyled list-social" style="justify-content:{%if settings.brand_description == blank %}center{% else %}{{ social_icons_alignment }}{% endif %}; margin: 2rem 0px 0px;">
  {%- if settings.social_facebook_link != blank -%}
    <li class="list-social__item">
      <a href="{{ settings.social_facebook_link }}" class="link list-social__link">
        {%- render 'icon-facebook' -%}
        <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
      </a>
    </li>
  {%- endif -%}
