<div class="shop-bts" {{ block.shopify_attributes }}>
  {% if block.settings.enable_cta == false %}
    <a href="{{ block.settings.button_link }}" style="text-decoration: none;">
      <button
        id="ProductSubmitButton-template--23005655302426__main"
        class="button button--primary home-cart-button color-{{ block.settings.color_scheme }} split-slide-button"
        style="background-color: {{ block.settings.button_bg_color }};"
      >
        <div class="split-slide-right"></div>
        <span
          class="button-text"
          style="color: {% if global_color %}rgb(var(--color-base-solid-button-labels)) !important{% else %}{{ block.settings.button_text_color }} !important{% endif %};"
        >
          {{ block.settings.button_text }}
        </span>
      </button>
    </a>
  {% else %}
    <product-form class="product-form">
      <div class="product-form__error-message-wrapper" role="alert" hidden="">
        <svg aria-hidden="true" focusable="false" class="icon icon-error" viewBox="0 0 13 13">
          <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"></circle>
          <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"></circle>
          <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"></path>
          <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7"></path>
        </svg>
        <span class="product-form__error-message"></span>
      </div>
      <form
        method="post"
        action="/cart/add"
        id="product-form-template--23005655302426__main"
        accept-charset="UTF-8"
        class="form"
        enctype="multipart/form-data"
        novalidate="novalidate"
        data-type="add-to-cart-form"
      >
        <input type="hidden" name="form_type" value="product">
        <input type="hidden" name="utf8" value="âœ“">
        <div class="product-form__multiple-variant-ids"></div>
        <input
          type="hidden"
          name="id"
          data-selected-id="{{ section.settings.product.selected_or_first_available_variant.id }}"
          value="{{ section.settings.product.selected_or_first_available_variant.id }}"
          class="product-variant-id"
        >
        <div class="product-form__buttons product-form__buttons--uppercase product-buy-buttons-container">
          <a href="{{ block.settings.button_link }}">
            <button
              id="ProductSubmitButton-template--23005655302426__main"
              type="submit"
              name="add"
              style="background-color: rgb(var(--color-base-{{ block.settings.color_scheme }})) !important"
              class="button button--primary home-cart-button split-slide-button"
            >
              <div class="split-slide-right"></div>
              <span
                class="product-form-button-text button-text"
                style="color: {{ block.settings.text_color }}!important"
              >
                {{- block.settings.button_text }}
              </span>
              <div class="loading-overlay__spinner hidden">
                <svg
                  aria-hidden="true"
                  focusable="false"
                  class="spinner"
                  viewBox="0 0 66 66"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                </svg>
              </div>
            </button>
          </a>
        </div>
        <input type="hidden" name="product-id" value="{{ block.settings.product.id }}">
        <input type="hidden" name="section-id" value="{{ section.id }}">
      </form>
    </product-form>
  {% endif %}
</div> 